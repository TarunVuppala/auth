{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // ESM for Node 16/18/20+ (Auto-handles extensions)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    // Allow Node types
    "types": ["node"],

    // Type support
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Only safe options, no React/Web bundler stuff
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
