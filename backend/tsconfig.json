{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // CommonJS output for Node runtimes
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "types": ["node"],

    // Debuggable build outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Helpful type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,

    // Node-friendly defaults
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
